header
	position fixed
	width 100%
	padding 15px 0
	z-index 999
	background-color white
	border-bottom 3px solid $gray-f2
	box-shadow 0 0 5px #666
	h1
		position absolute
		top -5px
		left 0
		font-family $futuraBook
		em(20px)
		> a
			display block
	nav
		position absolute
		top 8px
		right 22%
		> ul
			> li
				display inline-block
				vertical-align top
				text-align center
				margin 0 0 0 -4px
				&:hover
					.flecha-up
						opacity 1
				> a
					display block
					em(12px)
					padding 0 15px
					height 42px
					border-bottom 3px solid transparent
					transition(all .3s linear 0s)
					&:hover
					&.active
						border-bottom 4px solid $blue
						color $blue
						/*&:before
							content '<i class="icon icon-arrow"></i>'
							color $blue
							em(14px)*/
				> span 
					font-size 18px
					position relative
					top -4px				
	.buttons
		text-align right
		> a
			display inline-block
			padding 8px 24px
			border-radius 5px
			border 1px solid $gray-99
			em(12px)
			margin 0 0 0 10px
			transition(all .3s linear 0s)
			&:hover
				color white
				background $skyblue
				border 1px solid $skyblue
.flecha-up 
	width 0px
	opacity 0
	height 0px
	border-left 5px solid transparent /* izquierda flecha */
	border-right 5px solid transparent /* derecha flecha */
	border-bottom 7px solid $blue /* base flecha y color*/
	font-size 0px
	line-height 0px
	position relative
	left 45%
	top -11px				