header
	position fixed
	width 100%
	padding 15px 20px
	z-index 999
	background-color #0e63c7
	border-bottom 3px solid #85b1fb
	box-shadow 0 0 5px #666
	font-family $dinMedium
	h1
		position absolute
		top -5px
		left 0
		em(27px)
		line-height 49px
		font-family $sacramento
		> a
			display block
			color #1b0909
	nav
		position absolute
		top 10px
		right 25%
		> ul
			> li
				display inline-block
				vertical-align top
				text-align center
				margin 0 0 0 -4px
				> a
					display block
					em(12px)
					padding 0 15px
					height 25px
					transition(all .3s linear 0s)
					&:hover
					&.active
						color $blue
						/*&:before
							content '<i class="icon icon-arrow"></i>'
							color $blue
							em(14px)*/
				> span 
					font-size 18px
					position relative
					top -4px				
	.buttons
		text-align right
		> a
			display inline-block
			padding 8px 24px
			border-radius 5px
			border 1px solid $gray-99
			em(12px)
			margin 0 0 0 10px
			transition(all .3s linear 0s)
			&:hover
				color white
				background $blue
				border 1px solid $blue